{
  "name": "@phaicom/zrch",
  "version": "0.0.1",
  "description": "A lightweight Vue 3 component library",
  "repository": "https://github.com/Phaicom/component-library.git",
  "author": "Reawpai Chunsoi <reawpai.chun@yahoo.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/zrch.umd.js",
  "module": "./dist/zrch.es.js",
  "exports": {
    ".": {
      "import": "./dist/zrch.es.js",
      "require": "./dist/zrch.umd.js"
    }
  },
  "unpkg": "./dist/zrch.umd.js",
  "jsdelivr": "./dist/zrch.umd.js",
  "scripts": {
    "dev": "vitepress dev",
    "build": "vue-tsc --noEmit && vitepress build",
    "serve": "vitepress serve",
    "build:library": "vite build",
    "analyze": "vite build --config analyze.config.js",
    "publish:library": "npm publish --access public",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore src",
    "lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "analysis": "windicss-analysis"
  },
  "peerDependencies": {
    "vue": "^3.1.5"
  },
  "dependencies": {
    "mitt": "^3.0.0",
    "tabbable": "^5.2.1",
    "tippy.js": "^6.3.7",
    "windicss": "^3.2.1"
  },
  "devDependencies": {
    "@hannoeru/eslint-config": "^0.3.5",
    "@types/node": "^16.11.10",
    "@vitejs/plugin-vue": "^1.10.1",
    "@vue/compiler-sfc": "^3.2.23",
    "esbuild-register": "^3.2.0",
    "eslint": "^7.32.0",
    "eslint-plugin-markdown": "^2.2.1",
    "rollup-plugin-visualizer": "^5.5.2",
    "typescript": "^4.5.2",
    "vite": "^2.6.14",
    "vite-plugin-restart": "^0.0.2",
    "vite-plugin-windicss": "^1.5.1",
    "vitepress": "^0.20.1",
    "vue-tsc": "^0.29.6",
    "windicss-analysis": "^0.3.4"
  }
}